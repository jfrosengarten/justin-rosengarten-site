---
const title = "Justin Rosengarten";
const tagline = "Documentary editor. Systems-minded. Story-first.";
const email = "mailto:justin.rosengarten@gmail.com";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Personal site for Justin Rosengarten." />

    <style>
      :root {
        --bg: #06080f;
        --text: rgba(255, 255, 255, 0.94);
        --muted: rgba(255, 255, 255, 0.74);
        --card: rgba(255, 255, 255, 0.045);
        --border: rgba(255, 255, 255, 0.12);
        --max: 980px;
        --radius: 20px;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        height: 100%;
      }

      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto,
          Helvetica, Arial, sans-serif;
        line-height: 1.55;
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
        background: radial-gradient(
            900px 700px at 18% 8%,
            rgba(86, 130, 255, 0.18),
            transparent 60%
          ),
          radial-gradient(
            900px 700px at 82% 12%,
            rgba(255, 140, 90, 0.14),
            transparent 62%
          ),
          radial-gradient(
            1200px 900px at 50% 110%,
            rgba(255, 255, 255, 0.06),
            transparent 55%
          ),
          var(--bg);
        color: var(--text);
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      .container {
        max-width: var(--max);
        margin: 0 auto;
        padding: 78px 20px;
      }

      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 28px;
        backdrop-filter: blur(10px);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.45);
      }

      h1 {
        margin: 0 0 10px;
        font-size: clamp(38px, 4.6vw, 64px);
        line-height: 1.03;
        letter-spacing: -0.02em;
        text-wrap: balance;
      }

      p {
        margin: 0 0 14px;
        font-size: 18px;
        color: var(--muted);
      }

      .row {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 18px;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 16px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.06);
        transition: transform 120ms ease, background 120ms ease,
          border-color 120ms ease;
      }

      .btn:hover {
        transform: translateY(-1px);
        background: rgba(255, 255, 255, 0.085);
        border-color: rgba(255, 255, 255, 0.18);
      }

      .btn.primary {
        background: rgba(255, 255, 255, 0.14);
      }

      .btn.primary:hover {
        background: rgba(255, 255, 255, 0.18);
      }

      .section {
        margin-top: 18px;
      }

      h2 {
        margin: 0 0 10px;
        font-size: 18px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.78);
      }

      ul {
        margin: 0;
        padding-left: 18px;
        color: rgba(255, 255, 255, 0.78);
        line-height: 1.65;
      }

      .footer {
        margin-top: 44px;
        font-size: 14px;
        color: rgba(255, 255, 255, 0.55);
      }
    </style>
  </head>

  <body>
    <main class="container">
      <section class="card">
        <h1>{title}</h1>
        <p>{tagline}</p>

        <div class="row">
          <a class="btn primary" href={email}>Contact</a>
          <a class="btn" href="#work">Work</a>
        </div>
      </section>

      <section id="work" class="card section">
        <h2>Selected Work</h2>
        <ul>
          <li><strong>The Earthwalker</strong> — short doc (2022–)</li>
          <li><strong>The Flip</strong> — feature doc (editor)</li>
          <li><strong>AFI Fest</strong> — technical ops / workflows</li>
        </ul>
      </section>

      <div class="footer">© {new Date().getFullYear()} {title}</div>
    </main>
  </body>
</html>