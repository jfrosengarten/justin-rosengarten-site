---
import "../styles/global.css";

const title = "Justin Rosengarten";
const tagline = "Documentary editor. Systems-minded. Story-first.";
const email = "mailto:justin.rosengarten@gmail.com";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Personal site for Justin Rosengarten." />

    <link rel="canonical" href="https://justinrosengarten.com/" />
    <meta property="og:title" content="Justin Rosengarten" />
    <meta
      property="og:description"
      content="Documentary editor. Systems-minded. Story-first."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://justinrosengarten.com/" />

    <meta name="twitter:card" content="summary_large_image" />
  </head>

  <body>
    <main class="container">
      <section class="card">
        <h1>{title}</h1>
        <p>{tagline}</p>

        <div class="row">
          <a class="btn primary" href={email}>Contact</a>
          <a class="btn" href="#work">Work</a>
        </div>
      </section>

      <section id="work" class="card section">
        <h2>Selected Work</h2>
        <ul>
          <li><strong>The Earthwalker</strong> — short doc (2022–)</li>
          <li><strong>The Flip</strong> — feature doc (editor)</li>
          <li><strong>AFI Fest</strong> — technical ops / workflows</li>
        </ul>
      </section>

      <div class="footer">© {new Date().getFullYear()} {title}</div>
    </main>
  </body>
</html>